<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.tidsrejseagentur.Controllers.ControllerSceneTidsrejseMaskiner"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" alignment="CENTER">
        <HBox spacing="15" alignment="CENTER">
            <Button text="Hovedmenu" onAction="#hovedmenuButton" HBox.hgrow="ALWAYS" />
            <Button text="Booking" onAction="#bookingButton" HBox.hgrow="ALWAYS" />
            <Button text="Tidsperioder" onAction="#tidsperioderButton" HBox.hgrow="ALWAYS" />
        </HBox>
        <HBox spacing="15" alignment="CENTER">
            <Button text="Tidsrejsemaskiner" onAction="#tidsrejsemaskinerButton" HBox.hgrow="ALWAYS" />
            <Button text="Kundeadministration" onAction="#kundeAdministrationButton" HBox.hgrow="ALWAYS" />
            <Button text="Guides" onAction="#guidesButton" HBox.hgrow="ALWAYS" />
        </HBox>
    </VBox>

    <center>
        <VBox alignment ="CENTER" >
            <Label fx:id="velkommenTekst" text="TimeMachine administration" style ="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <HBox spacing ="10" alignment="CENTER" >
                <TextField fx:id="timemachineName" promptText="What is the name of the Time Machine?" />
                <TextField fx:id="timemachineCapacity"  promptText="How much capacity does the time machine have?" />
                <ListView fx:id="listofTimeMachines" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="5" alignment="CENTER" >
            <Button text ="Add Time Machine" onAction="#addTimeTimeMachineButton" />
            <Button text ="Remove Time Machine" onAction="#removeTimeMachineButton" />
            <Button text ="Edit Time Machine" onAction="#editTimeMachineButton" />
        </HBox>
    </bottom>
</BorderPane>